@page
@model UserManager.Presentation.Pages.Auth.LoginModel
@{
}


<div class="row g-0">
    <!-- Left Side - Login Form -->
    <div class="col-md-6 bg-white form-section">
        <div class="form-box">
            <div class="mb-4 text-center logo">THE APP</div>
            <h5 class="mb-3">Start your journey</h5>
            <h2 class="mb-4 fw-bold">Sign In to The App</h2>
            <form method="post">
                <div class="mb-3">
                    <label class="form-label">E-mail</label>
                    <div class="input-group">
                        <input asp-for="Dto.Email"  type="email" class="form-control" placeholder="test@example.com" required />
                        <span  class="input-group-text"><i class="bi bi-envelope"></i></span>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <div class="input-group">
                        <input asp-for="Dto.Password" type="password" class="form-control" placeholder="********" required />
                        <span class="input-group-text"><i class="bi bi-eye"></i></span>
                    </div>
                </div>
                <div class="form-check mb-3">
                    <input type="checkbox" class="form-check-input" id="rememberMe" />
                    <label class="form-check-label" for="rememberMe">Remember me</label>
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Sign In</button>
                </div>
                <div class="d-flex justify-content-between mt-3 text-small">
                    <a asp-page="/Auth/SignUp">Don't have an account? <strong>Sign up</strong></a>
                    <a href="#">Forgot password?</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Right Side - Background -->
    <div class="col-md-6 bg-image d-none d-md-block"></div>
</div>