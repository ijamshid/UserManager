@page
@model UserManager.Presentation.Pages.Auth.SignUpModel
@{
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4">Sign Up</h2>

            <form method="post">

                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="user.Username" class="form-label"></label>
                    <input asp-for="user.Username" type="text" class="form-control" required />
                    <span asp-validation-for="user.Username" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="user.FirstName" class="form-label"></label>
                    <input asp-for="user.FirstName" type="text" class="form-control" required />
                    <span asp-validation-for="user.FirstName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="user.LastName" class="form-label"></label>
                    <input asp-for="user.LastName" type="text" class="form-control" required />
                    <span asp-validation-for="user.LastName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="user.Email" class="form-label"></label>
                    <input asp-for="user.Email" type="email" class="form-control" required />
                    <span asp-validation-for="user.Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="user.Password" class="form-label"></label>
                    <input asp-for="user.Password" type="password" class="form-control" required />
                    <span asp-validation-for="user.Password" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">Sign Up</button>
            </form>

            <p class="mt-3 text-center">Already have an account? <a asp-page="/Auth/Login">Sign in</a></p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
